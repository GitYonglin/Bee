<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:keys="clr-namespace:Bee.Models">
  <!-- Add Resources Here -->
  <ResourceDictionary.ThemeDictionaries>
    <!-- 亮色 -->
    <!-- <ResourceDictionary x:Key="Light"> -->
    <ResourceDictionary x:Key="{x:Static keys:ThemeManager.Light}">
      <SolidColorBrush x:Key="BgBody" Color="blue"></SolidColorBrush>
      <SolidColorBrush x:Key="TextPrimary" Color="White"></SolidColorBrush>
    </ResourceDictionary>
    <!-- 暗色 -->
    <ResourceDictionary x:Key="{x:Static keys:ThemeManager.Dark}">
      <SolidColorBrush x:Key="BgBody" Color="Red"></SolidColorBrush>
      <SolidColorBrush x:Key="TextPrimary" Color="White"></SolidColorBrush>
    </ResourceDictionary>
  </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>